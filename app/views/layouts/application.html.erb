  <!DOCTYPE html>
  <html>
  <head>
    <title>Recipe Book: S+R</title>

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">

    <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <style>

      .padding {
        padding-top: 5px;
        padding-bottom: 75px;
      }

      .scheme {
        background-color: #2C3539;
      }
    </style>

  </head>
  <body>
    <nav class="navbar navbar-default scheme" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="/" class="navbar-brand">S&R Recipes</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active">
              <% if current_user.present? %>
              <li><a href="/users/edit"><%= current_user.username %></a></li>
            <% else %>
              <li><a href="/users">User</a></li>
            <% end %>
            </a></li>
            <li>

            <a href="/recipes">My Recipes</a></li>
          </ul>

      <ul class="nav navbar-nav navbar-right">
        <li>
           <form action="/recipes/a/search" class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" name="ingredients" class="form-control" placeholder="Search Recipe Box">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        </li>
          <% if current_user.present? %>
            <li><a href="/users/edit">Profile</a></li>
            <li><a href="/users/sign_out" data-method="delete">Sign out</a></li>
          <% else %>
            <li><a href="/users/sign_up">Sign up</a></li>
            <li><a href="/users/sign_in">Log in</a></li>
          <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </nav>

      <div class="container">
        <% if notice.present? %>
          <div class="alert alert-dismissable alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= notice %>
          </div>
        <% end %>

        <% if alert.present? %>
          <div class="alert alert-dismissable alert-warning">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= alert %>
          </div>
        <% end %>

      </div>
    </div>
  </nav>

    <%= yield %>

  </body>
  </html>
