<!-- Simple full-width example-->

<div class="page-header">
  <h1>Recipe #<%= @recipe.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Cuisine</dt>
      <dd><%= @recipe.cuisine_id %></dd>

      <dt>Recipe name</dt>
      <dd><%= @recipe.recipe_name %></dd>

      <dt>Image url</dt>
      <dd><%= @recipe.image_url %></dd>

      <dt>Time to prepare</dt>
      <dd><%= @recipe.time_to_prepare %></dd>

      <dt>Time to cook</dt>
      <dd><%= @recipe.time_to_cook %></dd>

      <dt></dt>
      <dd>
        <div class="btn-group">
          <a href="/recipes" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>

          <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_recipe/<%= @recipe.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
      </dd>
    </dl>

  </div>
</div>

<!-- End simple full-width example-->

<!-- Responsive panel example-->

