<!-- Validation failure messages -->

<% if @cuisine_type.errors.any? %>
  <% @cuisine_type.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Cuisine Type #<%= @cuisine_type.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_cuisine_type/<%= @cuisine_type.id %>" class="form-horizontal">
      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @cuisine_type.name %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Cuisine Type" class="btn btn-warning">
          or
          <a href="/cuisine_types/<%= @cuisine_type.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

